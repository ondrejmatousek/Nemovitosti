<!DOCTYPE html>
<html lang="en" class="bg-white">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">

    <script src="https://kit.fontawesome.com/f84fadafd5.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="col-2">
                <a class="p-0 pr-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/pictures/LogoHnede.png" style="width:38%;height:38%" />
                </a>
                @Html.ActionLink("DOMŮ", "Index", "Home")
            </div>
            <div class="text-right">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse col-10 justify-content-end" style="font-size:12px">
                <ul class=" nav navbar-nav">
                    <li class="nav-item mr-1">
                        @Html.ActionLink(linkText: "VLOŽIT INZERAT", actionName: "Vloz", controllerName: "Home", protocol: null, hostname: null, fragment: null, routeValues: null, htmlAttributes: new { @class = "btn btn-warning", @style = "font-size:12px; width:200px;", @type = "submit" })
                    </li>
                    <li class="nav-item mr-1">
                        <a href="" class="nav-link" style="color:black" type="submit" data-toggle="modal" data-target="#myModal" aria-expanded="false">PŘIHLÁSIT</a>
                    </li>
                    <li class="nav-item mr-1">
                        <a href="" class="nav-link" style="color:black" type="submit">REGISTROVAT</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>


    @*Modální Okno pro přihlášení*@
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Přihlásit se</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                        <div class="form-group">
                            <label for="uname1">Username</label>
                            <input type="text" class="form-control form-control-lg" name="uname1" id="uname1" required="">
                            <div class="invalid-feedback">Oops, you missed this one.</div>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control form-control-lg" id="pwd1" required="" autocomplete="new-password">
                            <div class="invalid-feedback">Enter your password too!</div>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="rememberMe">
                            <label class="custom-control-label" for="rememberMe">Remember me on this computer</label>
                        </div>
                        <hr />
                        <div class="form-group mb-0">
                            <button class="btn btn-outline-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
                            <button type="submit" class="btn btn-success float-right" id="btnLogin">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="fixed-bottom bg-light text-dark border">

            <div class="row p-2">

                <div class="col-md-3 col-sm-6 col-xs-12 text-center align-middle">
                    <p style="margin-bottom:0px">&copy; @DateTime.Now.Year - Nemovitosti</p>
                </div>
                <div class="col"></div>
                <div class="col-md-4 col-sm-6 col-xs-12 text-center">
                    <a href="#" class="text-dark p-2 text-decoration-none">OBCHODNÍ PODMÍNKY</a>
                    <a href="#" class="text-dark p-2 text-decoration-none">KONTAKT</a>
                    <a href="#" class="text-dark p-2 text-decoration-none">FAQ</a>
                </div>
                <div class="col"></div>

                <div class="col-md-3 col-sm-6 col-xs-12 text-center text-dark ">
                    <a href="#" class="text-primary p-1"><i class="fab fa-facebook fa-2x"></i></a>
                    <a href="#" class="text-warning p-1"><i class="fa fa-envelope fa-2x"></i></a>
                    <a href="#" class="text-primary p-1"><i class="fab fa-facebook-messenger fa-2x"></i></a>
                    <a href="#" class="text-success p-1"><i class="fab fa-whatsapp-square fa-2x"></i></a>
                </div>
            </div>

        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
